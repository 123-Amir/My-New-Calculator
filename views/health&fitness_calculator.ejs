<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health and Fitness Calculators</title>
    <link rel="stylesheet" href="health&fitness_calculator.css">
</head>
<body>
    <div class="container">
        <h1>Health and Fitness Calculators</h1>

        <!-- BMI Calculator -->
        <div class="calculator">
            <h2>BMI Calculator</h2>
            <label for="height-bmi">Height (cm):</label>
            <input type="number" id="height-bmi" placeholder="Enter height in cm">
            <label for="weight-bmi">Weight (kg):</label>
            <input type="number" id="weight-bmi" placeholder="Enter weight in kg">
            <button onclick="calculateBMI()">Calculate</button>
            <div class="result" id="bmi-result"></div>
        </div>

        <!-- BMR Calculator -->
        <div class="calculator">
            <h2>BMR Calculator</h2>
            <label for="gender-bmr">Gender:</label>
            <select id="gender-bmr">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
            <label for="age-bmr">Age:</label>
            <input type="number" id="age-bmr" placeholder="Enter age">
            <label for="weight-bmr">Weight (kg):</label>
            <input type="number" id="weight-bmr" placeholder="Enter weight in kg">
            <label for="height-bmr">Height (cm):</label>
            <input type="number" id="height-bmr" placeholder="Enter height in cm">
            <button onclick="calculateBMR()">Calculate</button>
            <div class="result" id="bmr-result"></div>
        </div>

        <!-- Calorie Calculator -->
        <div class="calculator">
            <h2>Calorie Calculator</h2>
            <label for="activity-bmr">Activity Level:</label>
            <select id="activity-bmr">
                <option value="1.2">Sedentary</option>
                <option value="1.375">Lightly active</option>
                <option value="1.55">Moderately active</option>
                <option value="1.725">Very active</option>
                <option value="1.9">Super active</option>
            </select>
            <label for="age-calorie">Age:</label>
            <input type="number" id="age-calorie" placeholder="Enter age">
            <label for="gender-calorie">Gender:</label>
            <select id="gender-calorie">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
            <label for="weight-calorie">Weight (kg):</label>
            <input type="number" id="weight-calorie" placeholder="Enter weight in kg">
            <label for="height-calorie">Height (cm):</label>
            <input type="number" id="height-calorie" placeholder="Enter height in cm">
            <button onclick="calculateCalories()">Calculate</button>
            <div class="result" id="calorie-result"></div>
        </div>

        <!-- Body Fat Calculator -->
        <div class="calculator">
            <h2>Body Fat Calculator</h2>
            <label for="gender-fat">Gender:</label>
            <select id="gender-fat">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
            <label for="age-fat">Age:</label>
            <input type="number" id="age-fat" placeholder="Enter age">
            <label for="waist-fat">Waist (cm):</label>
            <input type="number" id="waist-fat" placeholder="Enter waist measurement in cm">
            <label for="neck-fat">Neck (cm):</label>
            <input type="number" id="neck-fat" placeholder="Enter neck measurement in cm">
            <button onclick="calculateBodyFat()">Calculate</button>
            <div class="result" id="bodyfat-result"></div>
        </div>

        <!-- Ideal Weight Calculator -->
        <div class="calculator">
            <h2>Ideal Weight Calculator</h2>
            <label for="gender-ideal">Gender:</label>
            <select id="gender-ideal">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
            <label for="height-ideal">Height (cm):</label>
            <input type="number" id="height-ideal" placeholder="Enter height in cm">
            <label for="age-ideal">Age:</label>
            <input type="number" id="age-ideal" placeholder="Enter age">
            <label for="frame-size">Frame Size:</label>
            <select id="frame-size">
                <option value="small">Small</option>
                <option value="medium">Medium</option>
                <option value="large">Large</option>
            </select>
            <button onclick="calculateIdealWeight()">Calculate</button>
            <div class="result" id="ideal-weight-result"></div>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>
